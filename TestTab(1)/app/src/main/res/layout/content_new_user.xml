<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.eli.testtab.NewUserActivity"
    tools:showIn="@layout/activity_new_user">

    <LinearLayout
        android:id="@+id/nomNU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User name" />

        <EditText
            android:id="@+id/nomnu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Add your name"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailNU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomNU"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email" />

        <EditText
            android:id="@+id/emailnu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Add your e-mail"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/psswordNU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailNU"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Password" />

        <EditText
            android:id="@+id/pwnu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Add your password"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/foto"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_below="@+id/psswordNU"
        android:contentDescription="@string/todo"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        app:srcCompat="@android:drawable/ic_menu_camera" />
</RelativeLayout>
